@model IEnumerable<ClothingStore.WebApp.Models.Orders>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@if (TempData.Peek("Order Id") != null)
{
    <div>
        <form asp-action="AddProduct" method="get">
            <input type="submit" value="AddProduct" class="btn btn-info" />
        </form>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoreId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatePurchased)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StoreId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StoreName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DatePurchased)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                @*<td>
                    @Html.ActionLink("Details", "Details", new { id = item.OrderId })
                </td>*@
            </tr>
        }
    </tbody>
</table>

<div>
    @if (TempData.Peek("Order Id") != null)
    {
        <h6>current order id is: @TempData.Peek("Order Id").ToString()</h6>
    }
    <h5><strong>Basic Statistics</strong></h5>
    <h6>Total Sum: @ViewBag.totalSum</h6>
    <h6>Average: @ViewBag.averageSum</h6>
    <h6>Smallest Order: @ViewBag.minNum</h6>
    <h6>Largest Order: @ViewBag.maxNum</h6>

</div>